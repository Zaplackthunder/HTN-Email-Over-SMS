<div class="bg">
	<div class="centered-bg">
		<h2>Get & Send emails via your SMS Inbox without Wifi</h2>
		<%= form_for :user, :url => '/register', :html => {:class => 'big-form'} do |u| %>
			<label class='text-muted big-label'>Phone Number</label>
			<div class="phone-num-section"> 
				<%= u.text_field :phonenumber, :class => 'big-input', :placeholder => '645 823 9098' %> 
			</div>
			<div class="submit-section">
				<%= u.submit :class=> 'btn btn-primary big-button', :value => 'Connect to Gmail' %>
			</div>
		<% end %>
	</div>
</div>